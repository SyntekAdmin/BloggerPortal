    <script type="text/javascript">

    $(document).ready(function () {
        new Vue({
            el: '#app',
            data: {
                layout: 'grid',
                myItems: []
            },
            mounted: function () {
                this.load()
            },
            methods: {
                load: function () {
                    var vm = this;

                    var userSeq   = param("userSeq");
                    var myItemSeq = param("myItemSeq");
                    if (typeof (userSeq) != "undefined" && typeof (myItemSeq) != "undefined"){
               //     if (!userSeq && !myItemSeq) {                        
                        $.ajax({
                            url: '/api/admin/points/' + userSeq + '/' + myItemSeq,
                            success(res) {


                                console.log('myItem >> ', res);
                                console.log('photoList >> ', res[0].PhotoList);

                                $.each(res, function (i, v) {
                                    if (v) Vue.set(vm.myItems, i, v);
                                });

                            }
                        });
                    } else {
                        console.log('abnormal arguments');
                    }
                }
            }
        });
    });

    </script>
}