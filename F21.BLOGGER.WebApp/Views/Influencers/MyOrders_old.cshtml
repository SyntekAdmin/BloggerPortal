<div id="content">
    <!-- row -->
    <div class="row">
        <!-- col -->
        <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
            <h1 class="page-title txt-color-blueDark">
                <!-- PAGE HEADER -->
                <i class="fa-fw fa fa-shopping-cart"></i>
                MY ORDERS
            </h1>
        </div>
        <!-- end col -->
        <div class="col-xs-5 col-sm-5 hidden-xs">
            <div class="row pull-right page-title">
                <div class="dataTables_filter" id="datatable_fixed_column_filter">
                    <label>
                        <span class="input-group-addon">
                            <i class="glyphicon glyphicon-search"></i>
                        </span>
                        <input aria-controls="datatable_fixed_column" placeholder="" class="form-control" type="search">
                    </label>
                </div>
            </div>
        </div>
    </div>
    <!-- end row -->

    <style>
        .order-img-box li img {
            width: 100px;
            height: 160px;
        }

        /* List layout */
        ul.list {
            list-style: none;
            /*width: 500px;*/
            margin: 0 auto;
            text-align: left;
        }

        ul.list li {
            border-bottom: 1px solid #ddd;
            padding: 10px;
            overflow: hidden;
        }

        ul.list li img {
            width: 120px;
            height: 120px;
            float: left;
            border: none;
        }

        ul.list li p {
            margin-left: 135px;
            font-weight: bold;
            color: #6e7a7f;
        }

        /* Grid layout */

        ul.grid {
            list-style: none;
            /*width: 570px;*/
            margin: 0 auto;
            text-align: left;
        }

        ul.grid li {
            padding: 2px;
            float: left;
        }

        ul.grid li img {
            width: 200px;
            height: 200px;
            object-fit: cover;
            display: block;
            border: none;
        }

        /* MyOrders 이미지 위에 문자열.. */
        ul.grid li .vx-title{
            text-align:center;
            font-weight:bold;
            background-color: rgba(255,255,255, 0.8);
            position: relative;
            top: -18px;
        }


        /* order image box */
        .order-img-head {
            height:30px;
            background-color: #eee; 
            padding: 4px 0 6px 10px;
        }

        .order-img-head b {
            font-size: larger;
        }

        .order-img-head span {
            margin: 0 10px 0 10px;
        }

        .order-img-head .pink {
            color: hotpink;
            text-decoration-line: underline;
        }

        #datatable_fixed_column_wrapper{
            border-top: 1px solid #ccc;
        }
    </style>

    <!--
