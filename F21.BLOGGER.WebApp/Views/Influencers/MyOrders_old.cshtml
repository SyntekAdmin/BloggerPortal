        You do not need to use widgets if you dont want to. Simply remove
        the <section></section> and you can use wells or panels instead
    -->
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">

            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12 sortable-grid ui-sortable">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-my-orders-myorders" data-widget-colorbutton="false"
                     data-widget-editbutton="false" data-widget-deletebutton="false">

                    <!-- widget div-->
                    <div>
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <div id="app" v-cloak>
                                <div class="dataTables_wrapper form-inline no-footer" id="datatable_fixed_column_wrapper">
                                    <div class="dt-toolbar">
                                        <div class="btn-group hidden-xs">
                                            <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                                SORT BY <span class="caret"></span>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a href="javascript:void(0);">Last Order</a>
                                                </li>
                                                <li>
                                                    <a href="javascript:void(0);">First Order</a>
                                                </li>
                                                <li class="divider"></li>
                                                <li>
                                                    <a href="javascript:void(0);">Status</a>
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="pull-right">
                                            <div class="btn-group hidden-xs">
                                                <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                                    VIEW <span class="caret"></span>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <a href="javascript:void(0);">All Influencers</a>
                                                    </li>
                                                    <li class="divider"></li>
                                                    <li>
                                                        <a href="javascript:void(0);">Jennifer Lee</a>
                                                    </li>
                                                    <li>
                                                        <a href="javascript:void(0);">Lillian Lawson</a>
                                                    </li>
                                                    <li>
                                                        <a href="javascript:void(0);">Rachel Porter</a>
                                                    </li>
                                                </ul>
                                            </div>
                                            <div class="btn-group" style="padding-left:20px;">
                                                <a href="javascript:void(0)" class="btn btn-default" id="btn-prev"><i class="fa fa-chevron-left"></i></a>

                                                <a href="javascript:void(0)" class="btn btn-default"> <span style="color:hotpink;font-weight:bold; text-decoration:underline;">1</span> </a>
                                                <a href="javascript:void(0)" class="btn btn-default"> <b>2</b> </a>
                                                <a href="javascript:void(0)" class="btn btn-default"> <b>3</b> </a>
                                                <a href="javascript:void(0)" class="btn btn-default">  <b>...</b> </a>

                                                <a href="javascript:void(0)" class="btn btn-default" id="btn-next"><i class="fa fa-chevron-right"></i></a>
                                            </div>
                                        </div>
                                    </div>


                                    <table style="width: 100%;" aria-describedby="datatable_fixed_column_info" role="grid" id="datatable_fixed_column" class="table table-striped table-bordered dataTable no-footer" width="100%">
                                        <tbody>
                                            <tr class="odd" role="row" v-for="a in myorders">
                                                <td>
                                                    <table style="width: 100%;">
                                                        <tr>
                                                            <td class="order-img-head">
