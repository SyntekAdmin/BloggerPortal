                                                                                <tr><td> Total : {{a.ITEM_COUNT}} item(s) / ${{a.TOTAL_PRICE}} </td></tr>
                                                                                <tr><td><hr /></td></tr>
                                                                                <tr>
                                                                                    <td style="text-align:center;">
                                                                                        <a class="btn btn-default"  v-bind:href="a.detail_page_url">View Detail</a> 
