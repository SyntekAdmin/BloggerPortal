                                                    </li>
                                                    <li tabindex="0" aria-controls="datatable_fixed_column" class="paginate_button "><a href="#">5</a></li>
                                                    <li id="datatable_fixed_column_ellipsis" tabindex="0" aria-controls="datatable_fixed_column" class="paginate_button disabled">
                                                        <a href="#">…</a>
                                                    </li>
                                                    <li tabindex="0" aria-controls="datatable_fixed_column" class="paginate_button ">
                                                        <a href="#">10</a>
                                                    </li>
                                                    <li id="datatable_fixed_column_next" tabindex="0" aria-controls="datatable_fixed_column" class="paginate_button next"><a href="#">Next</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        
                            </div>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
            </article>
            <!-- WIDGET END -->

        </div>
        <!-- end row -->
        
    </section>
    <!-- end widget grid -->


</div>

@section pagespecific {


    <script type="text/javascript">

    $(document).ready(function () {
        new Vue({
            el: '#app',
            data: {
                layout: 'grid',
                myorders: []
            },
            mounted: function () {
                this.load()
            },
            methods: {
                load: function () {
                    var vm = this;

                    $.ajax({
                        url: '/api/influencers/myorders_old',
                        success(res) {
                            console.log(res);

                            $.each(res, function (i, v) {
                                if (v) {
                                    v.detail_page_url = '/influencers/myorderdetail?orderno='+v.ORDER_NO ;

                                    Vue.set(vm.myorders, i, v);
                                }
                            });
                        }
                    });

                }
            }
        });
    });

    </script>
}