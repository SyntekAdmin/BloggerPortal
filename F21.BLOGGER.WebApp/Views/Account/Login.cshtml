    <script type="text/javascript">
        $(document).ready(function () {
           
            // Validation
            $("#login-form").validate({

                submitHandler: function () {
                    $('.loading').show();
                    $('#login-form').submit();
                   // form.submit();
                },

                rules: {
                    email: {
                        required: true,
                        email: true
                    },
                    password: {
                        required: true
                        , minlength: 7
                        , maxlength: 14
                    }
                },

                // Messages for form validation
                messages: {
                    email: {
                        required: 'Please enter your email address',
                        email: 'Please enter a VALID email address'
                    },
                    password: {
                        
                        required: 'Please enter your password'
                        , minlength : "Between 7 and 14 characters PASSWORD"
                        , maxlength : "Between 7 and 14 characters PASSWORD"
                    }
                }

            });
        });

    </script>

    <script type="text/javascript">
        var objPassword = document.getElementById('password');
        var objLoginBtn = document.getElementById('loginBtn');



        objPassword.onkeydown = function (e) {
            if (e.keyCode == 13) {

                fnClickShowPW(event, 'HIDE', 'SHOW', '#password');
                objLoginBtn.click();
            }
        }

        function ForgotPassword() {
            jQuery.support.cors = true;
            $.ajax({
                url: '/api/account/forgotpassword',
                type: 'POST',
                dataType: 'json',
                data: {
                    USER_EMAIL: email,
                    ACTION_EMAIL: email
                },
                success: function (data) {
                    if (data > 0) {
                        alert("success");
                    }
                    else {
                        alert("update error");
                    }
                },
                error: function () {
                    alert('webservice error');
                }
            });
        }


    </script>
