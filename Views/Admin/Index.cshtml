            dataType: 'json',
            data : {
                USER_SEQ : @LoginUserSeq,
                PHOTO_URL: photoUrl
            },
            success: function (data) {
                if(data > 0)
                {
                    //alert("success");
                    // location.reload();
                }
                else
                {
                    alert("photo update error");
                }
            },
            error: function () {
                alert('webservice error');
            }
        });
    }
</script>

